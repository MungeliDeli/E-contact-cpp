<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:orientation="vertical"
    android:background="@color/WhiteLite"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/green"
            android:padding="20dp">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_person_24" />

            <TextView
                android:id="@+id/User_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/profile_image"
                android:includeFontPadding="false"
                android:textStyle="bold"
                android:text="Mungeli One"
                android:textSize="25sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="521dp"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColorHint="@color/black"

                android:layout_marginBottom="10dp"

                android:hint="First Name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_first_name"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_person_241"
                    android:drawablePadding="10dp"
                    android:background="@color/white"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:text="firstnameuser" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColorHint="@color/black"

                android:hint="Last Name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_Last_name"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_person_241"
                    android:drawablePadding="10dp"
                    android:background="@color/white"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:text="Lastnameuser" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColorHint="@color/black"

                android:hint="Address">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/address"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_location_on_241"
                    android:drawablePadding="10dp"
                    android:background="@color/white"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:text="Address" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColorHint="@color/black"

                android:hint="Home Phone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/home_phone"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_call_241"
                    android:drawablePadding="10dp"
                    android:background="@color/white"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:text="Home Phone" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColorHint="@color/black"

                android:hint="Emergency contact Name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emergency_Contact"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_person_241"
                    android:drawablePadding="10dp"
                    android:background="@color/white"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:text="name" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black"

                android:layout_marginBottom="10dp"
                android:hint="Emergency contact Number">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_call_241"
                    android:background="@color/white"
                    android:id="@+id/emergency_Contact_number"

                    android:drawablePadding="10dp"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:text="number" />

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/update_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UPDATE"
                android:layout_marginTop="10dp"
                />


        </LinearLayout>
    </LinearLayout>
</ScrollView>